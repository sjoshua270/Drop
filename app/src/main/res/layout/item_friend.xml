<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/friend_prof_image"
        android:layout_width="@dimen/friend_prof_dimen"
        android:layout_height="@dimen/friend_prof_dimen"
        android:layout_margin="@dimen/small_margin"
        android:contentDescription="@string/prof_img_desc" />

    <TextView
        android:id="@+id/friend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_toEndOf="@id/friend_prof_image"
        android:layout_toRightOf="@id/friend_prof_image"
        android:text="@string/name"
        android:textSize="@dimen/friend_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />
</RelativeLayout>