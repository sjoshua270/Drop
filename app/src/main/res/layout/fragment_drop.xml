<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/listing_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image_description" />

        <ViewSwitcher
            android:id="@+id/description_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/listing_image"
            android:inAnimation="@anim/grow_fade_in"
            android:outAnimation="@anim/shrink_fade_out">

            <TextView
                android:id="@+id/listing_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/listing_padding"
                android:text="@string/hint_description"
                android:textSize="@dimen/listing_desc_size" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/listing_input_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_description" />
            </android.support.design.widget.TextInputLayout>
        </ViewSwitcher>
    </RelativeLayout>
</ScrollView>